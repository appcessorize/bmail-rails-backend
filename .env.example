# Rails Configuration
RAILS_ENV=production
RAILS_LOG_TO_STDOUT=true
RAILS_SERVE_STATIC_FILES=true
RAILS_MAX_THREADS=5

# Database Configuration (Coolify will auto-provide DATABASE_URL for PostgreSQL)
# DATABASE_URL=postgresql://user:password@host:5432/database_name
BMBACKEND_RAILS_DATABASE_PASSWORD=your_production_db_password

# Secret Key Base (generate with: bin/rails secret)
SECRET_KEY_BASE=your_secret_key_base_here

# CORS Configuration (comma-separated list of allowed origins)
# For Coolify, set this to your app's domain
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Host Authorization (comma-separated list of allowed hosts)
# For Coolify, set this to your app's domain
ALLOWED_HOSTS=your-domain.com,www.your-domain.com

# Redis (if using for cache/queue in future)
# REDIS_URL=redis://localhost:6379/1

# Storage Configuration
# For production, configure S3 or similar
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_REGION=us-east-1
# AWS_BUCKET=your-bucket-name
